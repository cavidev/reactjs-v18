{
    "files.eol": "\n",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "git.ignoreLegacyWarning": true,
    "workbench.editorAssociations": {
        "*.svg": "default"
    },
    "terminal.integrated.env.windows": {},
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#ffffff",
        "terminalCursor.foreground": "#ffffff"
    },
    "terminal.integrated.cursorStyle": "underline",
    "oneDarkPro.bold": true,
    "errorLens.fontStyleItalic": true,
    "errorLens.fontFamily": "'Anonymous Pro'",
    "files.autoSave": "onFocusChange",
    "debug.console.fontFamily": "'Anonymous Pro', 'JetBrains Mono', default",
    "scm.inputFontFamily": "'Anonymous Pro', 'JetBrains Mono', default",
    "gitlens.blame.fontFamily": "'Anonymous Pro', 'JetBrains Mono', default",
    "terminal.integrated.fontFamily": "'Consolas','Anonymous Pro'",
    "terminal.integrated.fontSize": 14,
    "workbench.colorTheme": "One Dark Pro Darker",
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },
    "editor.inlayHints.fontFamily": "'Anonymous Pro', 'JetBrains Mono'",
    "editor.inlineSuggest.fontFamily": "'JetBrains Mono', 'Anonymous Pro', default",
    "editor.cursorBlinking": "expand",
    "editor.fontFamily": "'Victor Mono', 'JetBrains Mono', 'Anonymous Pro', monospace",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.fontSize": 16,
    "editor.fontWeight": "200",
    "editor.codeLensFontFamily": " 'Anonymous Pro', 'JetBrains Mono'",
    "editor.fontVariations": true,
    "editor.experimental.asyncTokenization": true,
    "editor.fontLigatures": "'ss02'",
    "editor.guides.bracketPairs": false,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.guides.highlightActiveBracketPair": true,
    "editor.stickyScroll.enabled": true,
    "editor.formatOnSaveMode": "file",
    "editor.formatOnType": false,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "[javascript, javascriptreact]": {
        /*Todos los archivos .js se van a formatear con esbenp.prettier-vscode */
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript, typescriptreact]": {
        /*Todos los archivos .tsx se van a formatear con vscode.typescript-language-features */
        // "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "prettier.printWidth": 100,
    "prettier.configPath": ".prettierrc",
    "html.format.indentInnerHtml": true,
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
}
